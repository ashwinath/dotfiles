export PATH=$HOME/bin:/usr/local/bin:$PATH

alias vim="nvim"
alias tmux="tmux -u"
alias k="kubectl"
alias g="git"
alias xclip="xclip selection -c"
alias tf="terraform"

export EDITOR="/usr/bin/nvim"

export TERM=alacritty

alias lsd='ls'
alias du='dust'
alias df='duf'

. $HOME/z.sh

function fixssh {
    if [ "$SSH_AUTH_SOCK" != "$HOME/.ssh/ssh_auth_sock" ]; then
        ln -sf $SSH_AUTH_SOCK ~/.ssh/ssh_auth_socj
    fi
}

fixssh

source $HOME/.passwords

